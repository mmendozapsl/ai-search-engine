{
  "name": "ai-search-engine-monorepo",
  "version": "1.0.0",
  "description": "A scalable AI Search Engine with monorepo architecture - separate frontend and backend services",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=backend",
    "start": "npm run start --workspace=backend",
    "build": "npm run build --workspace=frontend",
    "test": "npm test --workspaces",
    "install-all": "npm install --workspaces"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "rest-api",
    "monorepo",
    "ai-search-engine"
  ],
  "author": "Miguel Mendoza",
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}